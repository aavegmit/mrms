<section class="container">
<div class="login">
   <h1>Sign Up</h1>
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <p>
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </p>

      <p>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></p>

      <p>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %></p>

      <p style="display: none">
      <%= f.select :role, @role_options %></p>

      <p class="signup-submit"><%= f.submit "Sign up", :class => "splButton-primary" %></p>
   <% end %>
</div>

<div class="login-help">
   <%= render "devise/shared/links" %>
</div>
</section>

