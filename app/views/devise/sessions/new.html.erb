<section class="container">
<div class="login">
   <h1>Login to MRMS</h1>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <p>
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %></p>

      <p>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></p>

      <% if devise_mapping.rememberable? -%>
	 <p class="remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
      <% end -%>

      <p class="submit"><%= f.submit "Sign in", :class => "splButton-primary" %></p>
   <% end %>
</div>

<div class="login-help">
   <%= render "devise/shared/links" %>
</div>
</section>
